<% @page_title = "おしごといちらん"%>
<h2><%= @page_title %></h2>

<%= link_to "おしごとのとうろく", :new_income %>
<% if @incomes.present?%>
<table>
  <thead>
    <tr>
      <th>おしごと</th>
      <th>もらえるきんがく</th>
      <th>そうさ</th>
    </tr>
  </thead>
  <tbody>
    <% @incomes.each do |income|%>
      <tr>
        <td><%= income.name %></td>
        <td><%= income.description%></td>
        <td>
          <%= link_to "ここからへんしゅうできるよ", [:edit, income]%>
          <%= link_to "ここからおしごとをけせるよ", income, method: :delete,
              data: { confirm: "ほんとうにけしていい？"} %>
        </td>
      </tr>
    <% end %>
    <div>
     <%= link_to "はじめのがめんにもどるよ", root_path %>
    </div>
  </tbody>
</table>

<% else%>
  <p>おしごまだきまってないよ！</p>
<% end %>